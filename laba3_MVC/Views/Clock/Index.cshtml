@model IEnumerable<laba2_MVC.Models.Brand>

@{
    ViewBag.Title = "Index";
}

<h2>Brand</h2>

<table class="table">
    <tr>
        <th>@Html.ActionLink("+", "Create", new { })</th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Type", "Details", new { id = item.IdBrand }) |
            @Html.ActionLink("Edit", "Edit", new { id = item.IdBrand }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.IdBrand })
        </td>
    </tr>
}

</table>
